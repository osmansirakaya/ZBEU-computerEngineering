@model stoktakip.Models.Entity.musteriler

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div style="background-repeat:no-repeat; width: 1000px; height: 100px; background-image: url('../../images/updates.png');">

</div>
<br />
@using (Html.BeginForm("Güncelle", "musteri", FormMethod.Post))
{
    <div class="form-group">

        @Html.LabelFor(k => k.musteri_id, "Müşteri ID")
        @Html.TextBoxFor(k => k.musteri_id, new { @class = "form-control" })<br />

        @Html.LabelFor(k => k.musteri_ad, "Müşteri Ad")
        @Html.TextBoxFor(k => k.musteri_ad, new { @class = "form-control" })<br />

        @Html.LabelFor(k => k.musteri_soyad, "Müşteri Soyad")
        @Html.TextBoxFor(k => k.musteri_soyad, new { @class = "form-control" })
        <br />
        <div>

            <button class="btn btn-warning">MÜŞTERİ GÜNCELLE</button>

        </div>

    </div>
}

